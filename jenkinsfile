pipeline {
    agent any
    stages {
        stage('Code') {
            steps {
                checkout scm
            }
        }
        stage('Install') {
            steps {
                sh 'docker build -t flask-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 5000:5000 flask-app'
            }
        }
    }
}
